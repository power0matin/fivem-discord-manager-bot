# Discord
DISCORD_TOKEN=YOUR_DISCORD_BOT_TOKEN
DISCORD_NOTIFY_CHANNEL_ID=YOUR_CHANNEL_ID
PREFIX=.

# Mention settings
MENTION_HERE=true

# Keyword filter (regex, case-insensitive)
KEYWORD_REGEX=nox\s*rp

# Interval in seconds
CHECK_INTERVAL_SECONDS=60

# Optional: discovery mode (scan platforms for ANY live stream that matches)
# WARNING: Twitch scanning can be heavy; Kick is limited to max 100 results.
DISCOVERY_MODE=false
DISCOVERY_TWITCH_PAGES=5
DISCOVERY_KICK_LIMIT=100

# Twitch (client credentials)
TWITCH_CLIENT_ID=YOUR_TWITCH_CLIENT_ID
TWITCH_CLIENT_SECRET=YOUR_TWITCH_CLIENT_SECRET
TWITCH_GTA5_GAME_ID=32982

# Kick (client credentials)
KICK_CLIENT_ID=YOUR_KICK_CLIENT_ID
KICK_CLIENT_SECRET=YOUR_KICK_CLIENT_SECRET
KICK_GTA_CATEGORY_NAME=Grand Theft Auto V
