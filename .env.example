# Discord
DISCORD_TOKEN=YOUR_DISCORD_BOT_TOKEN

# Optional: can be configured via /setup wizard (recommended).
# If you set it here, it will be used as a first-run default unless ENV_OVERRIDES_DB=true.
DISCORD_NOTIFY_CHANNEL_ID=
DISCORD_CLIENT_ID=YOUR_APPLICATION_CLIENT_ID

# Optional but recommended (faster updates & instant command availability):
DISCORD_GUILD_ID=YOUR_TEST_GUILD_ID
PREFIX=.

# Mention settings
MENTION_HERE=true

# Keyword filter (regex, case-insensitive)
KEYWORD_REGEX=nox\s*rp

# Allowed Roles
ALLOWED_ROLE_IDS=123456789012345678,987654321098765432

# Optional: role given to streamers while live (must be manageable by the bot)
STREAMER_LIVE_ROLE_ID=123456789012345678

# Interval in seconds
CHECK_INTERVAL_SECONDS=300

# Settings precedence (optional)
# Default behavior: settings are stored in data.json; env vars act as defaults.
# Set to true to force env vars to overwrite DB settings on every startup.
ENV_OVERRIDES_DB=false

# Optional: discovery mode (scan platforms for ANY live stream that matches)
# WARNING: Twitch scanning can be heavy; Kick is limited to max 100 results.
DISCOVERY_MODE=false
DISCOVERY_TWITCH_PAGES=5
DISCOVERY_KICK_LIMIT=100

# Twitch (client credentials)
TWITCH_CLIENT_ID=YOUR_TWITCH_CLIENT_ID
TWITCH_CLIENT_SECRET=YOUR_TWITCH_CLIENT_SECRET
TWITCH_GTA5_GAME_ID=32982

# Kick (client credentials)
KICK_CLIENT_ID=YOUR_KICK_CLIENT_ID
KICK_CLIENT_SECRET=YOUR_KICK_CLIENT_SECRET
KICK_GTA_CATEGORY_NAME=Grand Theft Auto V
